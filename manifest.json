{
    "manifest_version": 3,
    "name": "C-Vert",
    "version": "1.0.0",
    "description": "Convert highlighted numbers to different units.",
    "permissions": ["contextMenus", "storage", "activeTab", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  